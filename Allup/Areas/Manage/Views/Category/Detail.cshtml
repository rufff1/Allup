@model Category
@{
    ViewData["Title"] = "Detail";

   
}

<h1>Detail Category</h1>




<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Created at</th>
                    <th>Created by</th>
                    <th>Updated at</th>
                    <th>Updated by</th>


                </tr>
            </thead>
            <tbody>

                <tr>
                    <td>
                        <img width="100" src="~/assets/images/@Model.Image" alt="Alternate Text" />
                    </td>
                    <td>@Model.Name</td>
                    <td>@Model.CreatedAt</td>
                    <td>@Model.CreatedBy</td>
                    <td>@Model.UpdatedAt</td>
                    <td>@Model.UpdatedBy</td>
                    <td>
                        <a class="btn btn-warning" asp-area="manage" asp-controller="category" asp-action="update" asp-route-id="@Model.Id">Update</a>
                        <a class="btn btn-danger" asp-area="manage" asp-controller="category" asp-action="delete" asp-route-id="@Model.Id">Delete</a>
                        <a class="btn btn-primary" asp-area="manage" asp-controller="category" asp-action="detail" asp-route-id="@Model.Id">Detail</a>
                    </td>
                </tr>



            </tbody>
        </table>
    </div>
</div>
