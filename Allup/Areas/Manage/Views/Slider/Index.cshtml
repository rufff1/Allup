

@{
    ViewData["Title"] = "Index";
     int  counter = 1;
}

@model IEnumerable<Slider>




<div class="row justify-content-between">
    <div class="col-lg-2">
        <h1 class="h3 mb-4 text-gray-800">Slider Page</h1>
    </div>
    <div class="col-lg-1">
        <a asp-area="manage" asp-controller="slider" asp-action="create" class="btn btn-primary">Create</a>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Image</th>
                    <th>SubTitle</th>
                    <th>MainTitle</th>
                    <th>Description</th>
                    <th>PageLink</th>
                    <th>Created at</th>
                    <th>Setting</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Slider slider in Model)
                {
                <tr>
                    <td>@counter</td>
                    <td>
                        <img width="100" src="~/assets/images/@slider.Image" alt="Alternate Text" />
                    </td>
                    <td>@slider.SubTitle</td>
                    <td>@slider.MainTitle</td>
                    <td>@slider.Description</td>
                    <td>@slider.PageLink</td>
                    <td>@slider.CreatedAt?.ToString("dd / MM / yyyy")</td>
                    <td>
                        <a class="btn btn-warning" asp-area="manage" asp-controller="slider" asp-action="update" asp-route-id="@slider.Id">Update</a>
                        <a class="btn btn-danger" asp-area="manage" asp-controller="slider" asp-action="delete" asp-route-id="@slider.Id">Delete</a>
                        <a class="btn btn-primary" asp-area="manage" asp-controller="slider" asp-action="detail" asp-route-id="@slider.Id">Detail</a>
                    </td>
                </tr>

                    counter++;
                }
            </tbody>
        </table>
    </div>
</div>


