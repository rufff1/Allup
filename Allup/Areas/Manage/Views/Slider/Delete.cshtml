@model Slider
@{
    ViewData["Title"] = "Delete";


}

<h1>Delete Slider</h1>




<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>SubTitle</th>
                    <th>MainTitle</th>
                    <th>Description</th>
                    <th>PageLink</th>
                    <th>Created at</th>
                    <th>Setting</th>
                </tr>
            </thead>
            <tbody>

                <tr>

                    <td>
                        <img width="100" src="~/assets/images/@Model.Image" alt="Alternate Text" />
                    </td>
                    <td>@Model.SubTitle</td>
                    <td>@Model.MainTitle</td>
                    <td>@Model.Description</td>
                    <td>@Model.PageLink</td>
                    <td>@Model.CreatedAt?.ToString("dd / MM / yyyy")</td>
                    <td>
                        <div class="row ">
                            <a asp-controller="slider" asp-action="Index" class="btn btn-warning">Cancel</a>
                            <form method="post">
                                <button class="btn btn-primary">Submit</button>
                            </form>
                        </div>
                    </td>
                </tr>



            </tbody>
        </table>
    </div>
</div>

